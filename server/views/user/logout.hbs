<div class="row "
   style="margin: 3em; padding: 2em; border-radius: 1em;">
    <div class="col s18 m12">
      <div class="card center grey lighten-4">
        <div class="card-content white-text">
          <div>
            <img class="row center" width="250" src="/images/registro.png">
          </div>
          <h1 class="black-text darken-1-text" style="font-style: italic;">Crear Cuenta </h1>
           
          <form >
            {{!-- nombre --}}
            <div class='input-field'>
            <label for='project-name' class="black-text">Nombre(S)</label>
            <input
              placeholder='Nombre(S)'
              id='correo'
              name='nombre'
              type='text'
              class="validate"
              value="{{ project.name }}"
              required
            />
            <span 
              class="helper-text"
              data-error="Es necesario que ingrese su o sus Nombres"
              data-success="✅ Correcto"
              ></span>
            {{#if errorModel.nombre }}
            <span style="color: crimson;">Error: {{ errorModel.nombre }}</span>
            {{/if}}
          </div>

          {{!-- Apellidos --}}

        <div class='input-field'>
            <label for='project-name' class="black-text">Apellidos</label>
            <input
              placeholder='Apellidos'
              id='correo'
              name='apellidos'
              type='text'
              class="validate"
              value="{{ project.apellidos }}"
              required
            />
            <span 
              class="helper-text"
              data-error="Es Necesario que ingrese sus Apellidos"
              data-success="✅ Correcto"
              ></span>
            {{#if errorModel.apellido }}
            <span style="color: crimson;">Error: {{ errorModel.apellido }}</span>
            {{/if}}
          </div>